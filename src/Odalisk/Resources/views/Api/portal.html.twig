{% if portals|length > 0 %}
    {% if display == 'span' %}
        <div class="row-fluid row-nomargin-top">
        {% for portal in portals %}
                {% include 'App:Portal:span-item.html.twig' with {'portal': portal} %}
                {% if ((loop.index - 1) % 3) == 2 %}
                    </div><div class="row-fluid row-nomargin-top">
                {% endif %}
        {% endfor %}
        </div>
    {% elseif display == 'list' %}
        {% for portal in portals %}
            {% include 'App:Portal:table-item.html.twig' with {'portal': portal} %}
        {% endfor %}
    {% endif %}
    {% if portals|length == 20 %}
        <tr>
            <td colspan="2" class="portal-item">
            <div class="btn btn-large" onclick="window.api.nextPage(this);" id="moreResults">Plus de résultats</div>
            </td>
        </tr>
    {% endif %}
{% elseif pagenumber != 0 %}
{% else %}
    <tr class="no-result">
        <td colspan="3" class="portal-item">
            <h2>Aucun résultat</h2>
        </td>
    </tr>
{% endif %}

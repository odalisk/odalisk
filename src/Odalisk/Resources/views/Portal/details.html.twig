{% extends "App::layout.html.twig" %}

{% block title %}Odalisk project{% endblock %}

{% block content %}
    <div class="well hero-unit hero-unit-intro">
        <h1>{{ portal.name }} :</h1>
        <div class="clearfix"></div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span4">
                    <table class="table table-bordered ">
                        <tr>
                            <td class="key">Catégories</td>
                            <td>Urbanisme</td>
                        </tr>
                        <tr>
                            <td class="key">Fréquence</td>
                            <td>Trimestrielle</td>
                        </tr>
                        <tr>
                            <td class="key">Mise à disposition</td>
                            <td>17/11/2011</td>
                        </tr>
                        <tr>
                            <td class="key">Mise à jour</td>
                            <td>15/02/2012</td>
                        </tr>
                        <tr>
                            <td class="key">Licence</td>
                            <td><span class="label label-success">ODBL</span></td>
                        </tr>
                    </table>
                </div>
                <div class="span8">
                    <table class="table score table-bordered">
                        <tr class="total-score">
                            <td class="key">Score</td>
                            <td class="progress-bar">
                                <div class="progress progress-striped
                                 active progress-success">
                                  <div class="bar"
                                       style="width: 85%;"></div>
                                </div>
                            </td>
                            <td class="note">163/200</td>
                        </tr>
                        <tr>
                            <td class="key">Feedback</td>
                            <td class="progress-bar">
                                <div class="progress progress-striped
                                 active progress-warning">
                                  <div class="bar"
                                       style="width: 40%;"></div>
                                </div>
                            </td>
                            <td class="note">83/200</td>
                        </tr>
                        <tr>
                            <td class="key">Openess</td>
                            <td class="progress-bar">
                                <div class="progress progress-striped
                                 active progress-info">
                                  <div class="bar"
                                       style="width: 70%;"></div>
                                </div>
                            </td>
                            <td class="note">155/200</td>
                        </tr>
                        <tr>
                            <td class="key">API</td>
                            <td class="progress-bar">
                                <div class="progress progress-striped
                                 active progress-danger">
                                  <div class="bar"
                                       style="width: 20%;"></div>
                                </div>
                            </td>
                            <td class="note">42/200</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid row-nomargin-top">
        <table class="table table-striped table-dataset-list">
            <thead>
                <tr>
                    <th><h2>Liste des jeux de données</h2></th>
                </tr>
            </thead>
            <tbody>
            {% for dataset in portal.datasets %}
                <tr>
                    <td class="dataset-item">
                        <a href="{{ path('dataset_details', { 'dataset_number': dataset.id }) }}">
                            <h3>{{ dataset.name }}</h3>
                            <div class="more-infos">
                            <table class="row-fluid">
                                <tr>
                                    <td class="dataset-summary span9">
                                        {{ dataset.summary }}
                                    </td>
                                    <td class="span3">
                                        <span class="label label-info">{{ dataset.category }}</span> 
                                        <span class="label label-success">{{ dataset.license }}</span>
                                        <span class="label label-warning">{{ dataset.owner }}</span>
                                    </td>
                                </tr>
                            </table>
                            </div>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div><!--/row-->
{% endblock %}

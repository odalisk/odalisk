{% extends "App::browser.html.twig" %}

{% block title %}{{ portal.name }} - Odalisk project{% endblock %}

{% block content %}
<div class="row-fluid row-nomargin-top">
    <div class="span12">
        <ul class="breadcrumb">
          <li>
            <a href="{{ path('browser') }}">Browser</a> <span class="divider">/</span>
            <a href="{{ path('portals') }}">Portals</a> <span class="divider">/</span>
          </li>
          <li class="active">{{ portal.name }}</li>
        </ul>
        <div class="well hero-unit hero-unit-intro hero-unit-portal">
            <h1>{{ portal.name }} <a target="_blank" href="{{portal.url}}"><i class="icon-play-circle"></i> go to portal page</a></h1>
            <div class="clearfix"></div>
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span4">
                        {% include "App:Portal:info-table.html.twig" with {'portal' : portal, 'display_date' : true } %}
                    </div>
                    <div class="span8">
                        <table class="table score table-bordered">
                            <tr class="total-score">
                                <td class="key">Score</td>
                                <td class="progress-bar">
                                    <div class="progress progress-striped
                                     active progress-success">
                                      <div class="bar"
                                           style="width: 85%;"></div>
                                    </div>
                                </td>
                                <td class="note">163/200</td>
                            </tr>
                            <tr>
                                <td class="key">Feedback</td>
                                <td class="progress-bar">
                                    <div class="progress progress-striped
                                     active progress-warning">
                                      <div class="bar"
                                           style="width: 40%;"></div>
                                    </div>
                                </td>
                                <td class="note">83/200</td>
                            </tr>
                            <tr>
                                <td class="key">Openess</td>
                                <td class="progress-bar">
                                    <div class="progress progress-striped
                                     active progress-info">
                                      <div class="bar"
                                           style="width: 70%;"></div>
                                    </div>
                                </td>
                                <td class="note">155/200</td>
                            </tr>
                            <tr>
                                <td class="key">API</td>
                                <td class="progress-bar">
                                    <div class="progress progress-striped
                                     active progress-danger">
                                      <div class="bar"
                                           style="width: 20%;"></div>
                                    </div>
                                </td>
                                <td class="note">42/200</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row-fluid row-nomargin-top">
                <div class="span12">
                    {% include "App:Search:dataset-list.html.twig" with {'current_portal': portal.id} %}
                </div>
            </div><!--/row-->
        </div>
    </div>
</div>
{% endblock %}

{% block jsvariables %}
    window.searchType = "dataset";
    window.displayType = "list";
    window.needResult = true;
    {{ parent() }}
{% endblock %}

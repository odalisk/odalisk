{% extends "App::browser.html.twig" %}

{% block title %}Odalisk project{% endblock %}

{% block content %}
<div class="row-fluid row-nomargin-top">
    <div class="span12">
        <ul class="breadcrumb">
          <li>
            <a href="{{ path('portals') }}">Portals</a> <span class="divider">/</span>
          </li>
          <li class="active">{{ portal.name }}</li>
        </ul>
        <div class="well hero-unit hero-unit-intro">
            <h1>{{ portal.name }} :</h1>
            <div class="clearfix"></div>
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span4">
                        <table class="table table-bordered ">
                            <tr>
                                <td class="key">Catégories</td>
                                <td>Urbanisme</td>
                            </tr>
                            <tr>
                                <td class="key">Fréquence</td>
                                <td>Trimestrielle</td>
                            </tr>
                            <tr>
                                <td class="key">Mise à disposition</td>
                                <td>17/11/2011</td>
                            </tr>
                            <tr>
                                <td class="key">Mise à jour</td>
                                <td>15/02/2012</td>
                            </tr>
                            <tr>
                                <td class="key">Licence</td>
                                <td><span class="label label-success">ODBL</span></td>
                            </tr>
                        </table>
                    </div>
                    <div class="span8">
                        <table class="table score table-bordered">
                            <tr class="total-score">
                                <td class="key">Score</td>
                                <td class="progress-bar">
                                    <div class="progress progress-striped
                                     active progress-success">
                                      <div class="bar"
                                           style="width: 85%;"></div>
                                    </div>
                                </td>
                                <td class="note">163/200</td>
                            </tr>
                            <tr>
                                <td class="key">Feedback</td>
                                <td class="progress-bar">
                                    <div class="progress progress-striped
                                     active progress-warning">
                                      <div class="bar"
                                           style="width: 40%;"></div>
                                    </div>
                                </td>
                                <td class="note">83/200</td>
                            </tr>
                            <tr>
                                <td class="key">Openess</td>
                                <td class="progress-bar">
                                    <div class="progress progress-striped
                                     active progress-info">
                                      <div class="bar"
                                           style="width: 70%;"></div>
                                    </div>
                                </td>
                                <td class="note">155/200</td>
                            </tr>
                            <tr>
                                <td class="key">API</td>
                                <td class="progress-bar">
                                    <div class="progress progress-striped
                                     active progress-danger">
                                      <div class="bar"
                                           style="width: 20%;"></div>
                                    </div>
                                </td>
                                <td class="note">42/200</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="fluid-container">
            <div class="row-fluid row-nomargin-top">
                <div class="span12">
                    <table class="table table-striped table-dataset-list">
                        <thead>
                            <tr>
                                <th>
                                    {% if search is empty %}
                                        <h2>Liste des jeux de données</h2>
                                    {% else %}
                                        <h2>Résultats de la recherche : "{{ search }}" <a href="{{ path('delete_search_portal', { portal_id:portal.id }) }}") class="close" data-dismiss="modal">&times;</a></h2>
                                    {% endif %}
                                </th>
                                <th class="utils">
                                    <form class="form-search" method="post" action="{{ path('portal_details', { 'portal_number': portal.id, 'page_number': page_number }) }}">
                                        <input type="text" name="search" id="search" class="input-medium search-query"/> <button type="submit" class="btn">Search</button>
                                    </form>
                                    <div class="pagination">
                                      <ul>
                                        {% if page_from != 0 %}
                                            <li><a href="{{ path('portal_details', { 'portal_number': portal.id, 'page_number':(page_number - 1)  }) }}">Prev</a></li>
                                        {% endif %}
                                        <li class="active">
                                          <a href="#">{{ page_from }} - {{ page_to }}</a>
                                        </li>
                                        {% if not end %}
                                            <li><a href="{{ path('portal_details', { 'portal_number': portal.id, 'page_number':(page_number + 1)  }) }}">Next</a></li>
                                        {% endif %}
                                      </ul>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for dataset in datasets %}
                        <tr>
                            <td colspan="2" class="dataset-item">
                            {% include 'App:Dataset:table-item.html.twig' with {'dataset': dataset} %}
                        {% endfor %}
                            </td>
                        </tr>
                        </tbody>
                        
                    </table>
                    <div class="page_from_to">
                        <div class="pagination">
                          <ul>
                            {% if page_from != 0 %}
                                <li><a href="{{ path('portal_details', { 'portal_number': portal.id, 'page_number':(page_number - 1)  }) }}">Prev</a></li>
                            {% endif %}
                            <li class="active">
                              <a href="#">{{ page_from }} - {{ page_to }}</a>
                            </li>
                            {% if not end %}
                                <li><a href="{{ path('portal_details', { 'portal_number': portal.id, 'page_number':(page_number + 1)  }) }}">Next</a></li>
                            {% endif %}
                          </ul>
                        </div>
                    </div>
                </div>
            </div><!--/row-->
        </div>
    </div>
</div>
{% endblock %}

{% extends "App::layout.html.twig" %}

{% block title %}Odalisk project{% endblock %}

{% block content %}
    <ul class="breadcrumb">
      <li class="active">Portals</li>
    </ul>
    <div class="well hero-unit hero-unit-presentation">
        <h1>Portails : </h1>
        <p>Retrouvez ici tous les Portails que nous avons analysés</p>
    </div>
    <div class="row-fluid row-nomargin-top">
        <table class="table table-striped table-portal-list">
            <thead>
                <tr>
                    <th><h2>Liste des plateformes</h2></th>
                    <th class="page_from_to">
                        <div class="pagination">
                          <ul>
                            {% if page_from != 0 %}
                                <li><a href="{{ path('portals', { 'page_number':(page_number - 1)  }) }}">Prev</a></li>
                            {% endif %}
                            <li class="active">
                              <a href="#">{{ page_from }} - {{ page_to }}</a>
                            </li>
                            {% if not end %}
                                <li><a href="{{ path('portals', { 'page_number':(page_number + 1)  }) }}">Next</a></li>
                            {% endif %}
                          </ul>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
            {% for portal in portals %}
                <tr>
                    <td colspan="2" class="portal-item">
                        
                            <h3>
                                {% if portal.name|length > 50 %}
                                    {{ portal.name|slice(0,50) }}...<span class="badge badge-success">{{ portal.datasets|length}}</span>
                                {% else %}
                                    {{ portal.name|slice(0,50) }}<span class="badge badge-success">{{ portal.datasets|length}}</span>
                                {% endif %}
                            </h3>
                            
                            <div class="more-infos">
                                <table class="table table-nomargin-bottom">
                                    <tr>
                                        <td class="summary">
                                            <a class="portal-link" href="{{ portal.url }}">Visiter le site web</a>
                                        </td>
                                        <td class="labels">
                                            <span class="label label-success">{{ portal.updatedAt|date("m/d/Y") }}</span>
                                        </td>
                                        <td class="button">
                                            <a class="btn" href="{{ path('portal_details', { 'portal_number': portal.id }) }}">Détails</a>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div><!--/row-->
{% endblock %}

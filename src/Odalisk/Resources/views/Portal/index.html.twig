{% extends "App::layout.html.twig" %}

{% block title %}Odalisk project{% endblock %}

{% block content %}
    <div class="well hero-unit hero-unit-presentation">
        <h1>Data.nantes.fr : </h1>
        <p>Retrouvez ici tous les Portails que nous avons analys√©s</p>
    </div>
    <div class="row-fluid row-nomargin-top">
        <table class="table table-striped table-portal-list">
            <thead>
                <tr>
                    <th><h2>Liste des plateformes</h2></th>
                </tr>
            </thead>
            <tbody>
            {% for portal in portals %}
                <tr>
                    <td class="portal-item">
                        <a href="{{ path('portal_details', { 'portal_number': portal.id }) }}">
                            <h3>{{ portal.name }}</h3>
                            <div class="more-infos">
                                <span class="label">{{ portal.updatedAt|date("m/d/Y") }}</span> : <a class="portal-link" href="{{ portal.url }}">Visiter le site web</a>
                            </div>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div><!--/row-->
{% endblock %}

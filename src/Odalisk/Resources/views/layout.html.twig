{% if maintenance_status == true %}
      <div id="maintenance_mode">
          <div id="center_block">
              {% image '@App/Resources/public/img/odalisk-logo.png' output='/images/logo.png'
              %}
              <img id="logo" src="{{ asset_url }}"/>
              {% endimage %}

              <h2>Coming soon</h2>
          </div>
      </div>
      <a href="http://github.com/odalisk/odalisk"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://a248.e.akamai.net/assets.github.com/img/7afbc8b248c68eb468279e8c17986ad46549fb71/687474703a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6461726b626c75655f3132313632312e706e67" alt="Fork me on GitHub"></a>
{% else %}
    {% block page %}
        {% block navbar %}
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="#">Odalisk</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            {% block menu %}
                                <li class="active"><a href="#">Home</a></li>
                                <li><a href="#about">About</a></li>
                                <li><a href="#contact">Contact</a></li>
                            {% endblock %}
                        </ul>
                        {% block userinfos %}
                        <!--<p class="navbar-text pull-right">Logged in as <a href="#">username</a></p>-->
                        {% endblock %}
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
        {% endblock %}
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span9">
                    {% block content %}

                    {% endblock %}
                </div><!--/span-->
                <div class="span3">
                    {% block sidebar %}
                        <div class="well sidebar-nav">
                            <ul class="nav nav-list">
                                <li class="nav-header">Sidebar</li>
                                <li class="active"><a href="#">Link</a></li>
                                <li><a href="#">Link</a></li>
                                <li><a href="#">Link</a></li>
                                <li><a href="#">Link</a></li>
                                <li class="nav-header">Sidebar</li>
                                <li><a href="#">Link</a></li>
                                <li><a href="#">Link</a></li>
                                <li><a href="#">Link</a></li>
                                <li><a href="#">Link</a></li>
                                <li><a href="#">Link</a></li>
                                <li><a href="#">Link</a></li>
                                <li class="nav-header">Sidebar</li>
                                <li><a href="#">Link</a></li>
                                <li><a href="#">Link</a></li>
                                <li><a href="#">Link</a></li>
                            </ul>
                        </div><!--/.well -->
                    {% endblock %}
                </div><!--/span-->
            </div><!--/row-->
            <hr>

            <footer>
                <p>&copy; Company 2012</p>
            </footer>

        </div><!--/.fluid-container-->
    {% endblock %}
{% endif %}




{% block javascripts %}
    {# This uses the "assetic pipeline" - it loads script.* from the application bundle #}
    {% javascripts '|script' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

</body>
</html>
